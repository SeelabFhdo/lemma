{
  "name": "lemma-technology",
  "displayName": "LEMMA Technology Modeling Language",
  "description": "Support for the Technology Modeling Language of the LEMMA ecosystem to describe technologies such as programming languages or frameworks and their technology aspects",
  "version": "0.8.6",
  "publisher": "LEMMAExtensionTestingArea",
  "icon": "SEELAB_Logo.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeelabFhdo/lemma"
  },
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "technology",
        "aliases": [
          "LEMMA Technology Modeling Language",
          "technology"
        ],
        "extensions": [
          ".technology"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "technology",
        "scopeName": "source.technology",
        "path": "./syntaxes/technology.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "LEMMA Technology Modeling Language Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/LEMMA Technology Modeling Language Theme-color-theme.json"
      }
    ],
    "configuration": {
      "title": "LEMMA Technology Modeling Language",
      "properties": {
        "technology.languageServerHost": {
          "type": [
            "string",
            "null"
          ],
          "default": "localhost",
          "description": "The host the language server should listen to."
        },
        "technology.languageServerPort": {
          "type": [
            "integer",
            "null"
          ],
          "default": 5008,
          "description": "The port the language server should listen to."
        }
      }
    }
  },
  "dependencies": {
    "java-caller": "^3.0.0",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@types/vscode": "^1.79.1",
    "@vscode/test-electron": "^2.3.3",
    "typescript": "^5.1.3",
    "vscode-test": "^1.6.1"
  },
  "scripts": {
    "prepublish": "tsc -p .",
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  }
}
