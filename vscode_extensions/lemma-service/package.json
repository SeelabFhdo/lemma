{
  "name": "lemma-service",
  "displayName": "LEMMA Service Modeling Language",
  "description": "Support for the Service Modeling Language of the LEMMA ecosystem to describe APIs, communication protocol and other properties of a microservice ",
  "version": "0.8.6",
  "publisher": "LEMMAExtensionTestingArea",
  "icon": "SEELAB_Logo.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeelabFhdo/lemma"
  },
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "services",
        "aliases": [
          "LEMMA Service Modeling Language",
          "services"
        ],
        "extensions": [
          ".services"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "services",
        "scopeName": "source.services",
        "path": "./syntaxes/services.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "openapiDeclaration",
        "superType": "comment",
        "description": "Token type to describe the OpenAPI documentation for a microservice API method"
      }
    ],
    "themes": [
      {
        "label": "LEMMA Service Language Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/LEMMA Service Language Theme-color-theme.json"
      }
    ],
    "configuration": {
      "title": "LEMMA Service Modeling Language",
      "properties": {
        "service.languageServerHost": {
          "type": [
            "string",
            "null"
          ],
          "default": "localhost",
          "description": "The host the language server should listen to."
        },
        "service.languageServerPort": {
          "type": [
            "integer",
            "null"
          ],
          "default": 5009,
          "description": "The port the language server should listen to."
        }
      }
    }
  },
  "configurationDefaults": {
    "[services]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "dependencies": {
    "java-caller": "^3.0.0",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@types/vscode": "^1.79.1",
    "@vscode/test-electron": "^2.3.3",
    "typescript": "^5.1.3",
    "vscode-test": "^1.6.1"
  },
  "scripts": {
    "prepublish": "tsc -p .",
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  }
}
