{
  "name": "lemma-technology-mapping",
  "displayName": "LEMMA Technology Mapping Modeling Language",
  "description": "Support for the Technology Mapping Modeling Language of the LEMMA ecosystem to assign technology aspects to microservice aspects and domain aspects",
  "version": "0.8.6",
  "publisher": "LEMMAExtensionTestingArea",
  "icon": "SEELAB_Logo.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeelabFhdo/lemma"
  },
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "mapping",
        "aliases": [
          "LEMMA Technology Mapping Modeling Language",
          "mapping"
        ],
        "extensions": [
          ".mapping"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mapping",
        "scopeName": "source.mapping",
        "path": "./syntaxes/mapping.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "LEMMA Technology Mapping Modeling Language Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/LEMMA Technology Mapping Modeling Language Theme-color-theme.json"
      }
    ],
    "configuration": {
      "title": "LEMMA Technology Mapping Modeling Language",
      "properties": {
        "technologyMapping.languageServerHost": {
          "type": [
            "string",
            "null"
          ],
          "default": "localhost",
          "description": "The host the language server should listen to."
        },
        "technologyMapping.languageServerPort": {
          "type": [
            "integer",
            "null"
          ],
          "default": 5011,
          "description": "The port the language server should listen to."
        }
      }
    }
  },
  "dependencies": {
    "java-caller": "^3.0.0",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@types/vscode": "^1.79.1",
    "@vscode/test-electron": "^2.3.3",
    "typescript": "^5.1.3",
    "vscode-test": "^1.6.1"
  },
  "scripts": {
    "prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  }
}
